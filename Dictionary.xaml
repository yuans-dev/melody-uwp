<ResourceDictionary
    xmlns:my="using:Microsoft.UI.Xaml.Controls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:converters="using:Melody.Converters"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="DefaultBackground" Color="White"/>
            <SolidColorBrush x:Key="DefaultForeground" Color="Black"/>
            <Color x:Key="DefaultBackgroundColor">White</Color>
            <Color x:Key="DefaultForegroundColor">Black</Color>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="DefaultBackground" Color="Black"/>
            <SolidColorBrush x:Key="DefaultForeground" Color="White"/>
            <Color x:Key="DefaultBackgroundColor">Black</Color>
            <Color x:Key="DefaultForegroundColor">White</Color>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    <converters:BoolToPlaySymbolConverter x:Key="BoolToPlaySymbolConverter"/>
    <converters:StringToUpperCaseConverter x:Key="StringToUpperCaseConverter"/>
    <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
    <converters:ArrayToStringConverter x:Key="ArrayToStringConverter"/>
    <my:StackLayout x:Key="HorizontalStackLayout" Orientation="Horizontal" Spacing="6"/>
</ResourceDictionary>
